<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>Sales list</h5>
      </div>
      <%= link_to 'Send file', new_sale_file_path, { class: 'btn btn-primary' } %>
      <br></br>
      <div class="ibox-content">
        <div class="table table-striped">
	      	<table class="table">
            <thead>
              <tr>
						    <th>Purchaser name</th>
                <th>Send date</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
            	<% @files.each do |file|file %>
                <tr>
					        <td><%= file.file_filename.humanize %></td>
                  <td><%= l(file.created_at) %></td>
                  <td><%= link_to "Details", sale_file_path(file) %></td>
                  <td></td>
                </tr>
              <% end %>
            </tbody>
            <tfoot>
              <tr>
                <td colspan="9" class="footable-visible">
                  <%#= paginate @carga_de_despesas_assistenciais %>
                </td>
              </tr>
            </tfoot>
          </table>
	      </div><!--/table-responsive-->
      </div>
    </div>
  </div>
</div>