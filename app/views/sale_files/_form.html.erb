<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-title">
        <h5>New file</h5>
      </div>
      <div class="ibox-content">
				<%= simple_form_for file do |f| %>
					<%= f.input :file, as: :attachment, direct: true %>

          <div class="form-group">
            <label class="col-sm-2 control-label"></label>
            <div class="col-sm-9">
              <div class="progress progress-lg">
                <div class="progress-bar progress-bar-primary" id="cargaDeDespesaAssistencial" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
                  <span class="sr-only">0% Completo</span>
                </div>
              </div>
            </div>
          </div>

					<div class="hr-line-dashed"></div>
          <div class="form-group">
            <div class="col-sm-9 col-sm-offset-2">
              <%= link_to 'Cancel', sale_files_path, class: "btn btn-danger", data: { turbolinks: :false } %>
              <%= f.button :submit, 'Send', class: "btn btn-primary"  %>
            </div>
          </div>
				<% end %>
			</div>
		</div>
	</div>
</div>